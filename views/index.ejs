<%- include('templates/header', { title: "Home", name: name }) %>

<section class="text-center py-5 bg-light rounded shadow">
  <div class="container">
    <h1 class="display-4 fw-bold">Bullen's Assignment 2</h1>
    <% if (name) { %>
      <p class="lead mt-3">Hello, <strong><%= name %></strong>! You're logged in.</p>
      <div class="mt-4">
        <a href="/members" class="btn btn-success btn-lg mx-2">Members Area</a>
        <a href="/logout" class="btn btn-outline-danger btn-lg mx-2">Log Out</a>
      </div>
    <% } else { %>
      <p class="lead mt-3">Powered by Node.js, Express, MongoDB & Bootstrap.</p>
      <div class="mt-4">
        <a href="/signup" class="btn btn-primary btn-lg mx-2">Sign Up</a>
        <a href="/login" class="btn btn-outline-secondary btn-lg mx-2">Log In</a>
      </div>
    <% } %>
  </div>
</section>

<section class="container py-5">
  <div class="row g-4">
    <div class="col-md-4 text-center">
      <i class="bi bi-shield-lock-fill display-4 text-primary"></i>
      <h4 class="mt-3">Secure</h4>
      <p>Passwords are hashed with bcrypt and stored safely in MongoDB.</p>
    </div>
    <div class="col-md-4 text-center">
      <i class="bi bi-person-check-fill display-4 text-success"></i>
      <h4 class="mt-3">Account-Based</h4>
      <p>Users can sign up, log in, and access protected members-only content.</p>
    </div>
    <div class="col-md-4 text-center">
      <i class="bi bi-bootstrap-fill display-4 text-dark"></i>
      <h4 class="mt-3">Responsive</h4>
      <p>Built with Bootstrap for a responsive, mobile-friendly experience.</p>
    </div>
  </div>
</section>

<%- include('templates/footer') %>
